@model IEnumerable<SimpleBlog.Models.Post>

@{
    ViewData["Title"] = "Главная";
    Layout = "_Layout";
}

<div class="container">
    <!-- Заголовок и кнопка создания записи -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Записи блога</h1>

        @if (User.IsInRole("Moderator"))
        {
                <a asp-controller="Home" asp-action="CreatePost" class="btn btn-success">
                    + Новая запись
                </a>
        }
    </div>

    <!-- Список записей -->
    @if (Model != null && Model.Any())
    {
        @foreach (var post in Model)
        {
                    <div class="card post-card mb-4">
                        <div class="card-body">
                            <!-- Заголовок записи -->
                            <h4 class="card-title">@post.Title</h4>

                            <!-- Информация о записи -->
                            <div class="text-muted small mb-3">
                                <span>@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</span>
                                <span class="mx-2">•</span>
                                <span>
                            @if (post.AuthorId == "moderator-id")
                            {
                                            <span class="badge bg-warning">Модератор</span>
                            }
                            else
                            {
                                            <span>Автор: @post.AuthorId</span>
                            }
                                </span>
                            </div>

                            <!-- Содержимое записи -->
                            <div class="card-text mb-4">
                        @post.Content
                            </div>

                            <!-- Комментарии -->
                            <div class="border-top pt-3">
                                <h6 class="mb-3">
                                    Комментарии (@(post.Comments?.Count ?? 0))
                                </h6>

                                <!-- Список комментариев -->
                        @if (post.Comments != null && post.Comments.Any())
                        {
                            @foreach (var comment in post.Comments)
                            {
                                                <div class="card mb-2 @(User.IsInRole("Moderator") ? "border-warning" : "")">
                                                    <div class="card-body py-2">
                                                        <div class="d-flex justify-content-between">
                                                            <div>
                                                                <strong>
                                                    @(comment.AuthorId == "user-id" ? "Пользователь" : comment.AuthorId)
                                                                </strong>
                                                                <small class="text-muted ms-2">
                                                    @comment.CreatedAt.ToString("HH:mm")
                                                                </small>
                                                            </div>

                                                            <!-- Кнопка удаления для модератора -->
                                            @if (User.IsInRole("Moderator"))
                                            {
                                                                    <form method="post" asp-action="DeleteComment">
                                                                        <input type="hidden" name="id" value="@comment.Id" />
                                                                        <button type="submit" class="btn btn-sm btn-danger" 
                                                                                onclick="return confirm('Удалить комментарий?')">
                                                                            ✕
                                                                        </button>
                                                                    </form>
                                            }
                                                        </div>
                                                        <p class="mb-0 mt-1">@comment.Content</p>
                                                    </div>
                                                </div>
                            }
                        }
                        else
                        {
                                        <p class="text-muted">Пока нет комментариев</p>
                        }

                                <!-- Форма для нового комментария -->
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                                        <form method="post" asp-action="AddComment" class="mt-3">
                                            <input type="hidden" name="postId" value="@post.Id" />
                                            <div class="input-group">
                                                <textarea name="content" class="form-control" 
                                                          placeholder="Ваш комментарий..." 
                                                          rows="1" required></textarea>
                                                <button type="submit" class="btn btn-primary">
                                                    Отправить
                                                </button>
                                            </div>
                                        </form>
                        }
                        else
                        {
                                        <div class="alert alert-light border mt-3">
                                            <a asp-controller="Account" asp-action="Login" class="text-primary">
                                                Войдите
                                            </a>, чтобы комментировать
                                        </div>
                        }
                            </div>
                        </div>
                    </div>
        }
    }
    else
    {
            <div class="text-center py-5">
                <h4 class="text-muted">Пока нет записей</h4>
            @if (User.IsInRole("Moderator"))
            {
                        <p class="mt-2">
                            <a asp-controller="Home" asp-action="CreatePost" class="btn btn-primary">
                                Создать первую запись
                            </a>
                        </p>
            }
            else
            {
                        <p class="text-muted">Записи появятся позже</p>
            }
            </div>
    }
</div>